<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="20dp">
        <Button
                android:id="@+id/btnPickTopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Topping Dialog"/>

        <Button
                android:id="@+id/btnBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brightness Dialog"
                android:layout_marginTop="20dp"/>

        <Button
                android:id="@+id/btnTextLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text Limit Dialog"
                android:layout_marginTop="20dp"/>

        <Button
                android:id="@+id/btnEraseUsb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Erase Usb Dialog"
                android:layout_marginTop="20dp"/>

        <Button
                android:id="@+id/btnDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Piker Dialog"
                android:layout_marginTop="20dp"/>

        <Button
                android:id="@+id/btnTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time picker dialog"
                android:layout_marginTop="20dp"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="20sp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/blue"
                      android:id="@+id/tvDate"
                      android:text="dd/MM/yyyy"
                      android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/blue"
                      android:id="@+id/tvTime"
                      android:text="HH:mm"
                      android:layout_alignParentRight="true"/>


        </RelativeLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>